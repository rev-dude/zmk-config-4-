/ {
	behaviors {
		/* DEPRECATED: `inc_dec_cp` will be removed in the future */
		/omit-if-no-ref/ inc_dec_mwh: behavior_sensor_rotate_mouse_wheel {
			compatible = "zmk,behavior-sensor-rotate-var";
			label = "ENC_MOUSE_WHEEL";
			#sensor-binding-cells = <2>;
         	bindings = <&mwh>, <&mwh>;
		};

		enc: enc {
		    compatible = "zmk,behavior-sensor-rotate";
		    label = "ENCODER";
		    #sensor-binding-cells = <0>;
		    bindings = <&mwh SCROLL_DOWN &mwh SCROLL_UP>;
		};

		enc2: en, {
		    compatible = "zmk,behavior-sensor-rotate";
		    label = "ENCODER";
		    #sensor-binding-cells = <0>;
		    bindings = <&mwh SCROLL_RIGHT &mwh SCROLL_LEFT>;
		};
	};
};